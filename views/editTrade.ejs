<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Trading Journal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0f0f0f;
            color: #e0e0e0;
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: #1a1a1a;
            border-bottom: 1px solid #2a2a2a;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            color: #fff;
            font-size: 24px;
            font-weight: 600;
        }

        .back-btn {
            background: #2a2a2a;
            color: #e0e0e0;
            padding: 8px 16px;
            border: 1px solid #333;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s;
        }

        .back-btn:hover {
            background: #333;
            border-color: #444;
        }

        /* Container */
        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 0 30px;
        }

        .form-container {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 10px;
            padding: 40px;
        }

        .form-title {
            color: #fff;
            font-size: 26px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .form-subtitle {
            color: #888;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .error-message {
            background: #2d1515;
            color: #ff6b6b;
            padding: 12px 15px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            border-left: 3px solid #ff6b6b;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            color: #b0b0b0;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
        }

        label .required {
            color: #ff6b6b;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        select,
        textarea {
            width: 100%;
            padding: 12px 15px;
            background: #252525;
            border: 1px solid #333;
            border-radius: 6px;
            font-size: 15px;
            color: #e0e0e0;
            transition: all 0.3s;
            font-family: inherit;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #4a9eff;
            background: #2a2a2a;
        }

        input::placeholder,
        textarea::placeholder {
            color: #666;
        }

        input[type="file"] {
            cursor: pointer;
            width: 100%;
            padding: 12px 15px;
            background: #252525;
            border: 2px dashed #333;
            border-radius: 6px;
            font-size: 14px;
            color: #e0e0e0;
            transition: all 0.3s;
        }

        input[type="file"]:hover {
            border-color: #4a9eff;
            background: #2a2a2a;
        }

        input[type="file"]::file-selector-button {
            background: #4a9eff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
            font-weight: 600;
        }

        input[type="file"]::file-selector-button:hover {
            background: #3a8eef;
        }

        select {
            cursor: pointer;
        }

        select option {
            background: #252525;
            color: #e0e0e0;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 14px;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
        }

        .btn-submit {
            background: #4a9eff;
            color: white;
        }

        .btn-submit:hover {
            background: #3a8eef;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
        }

        .btn-cancel {
            background: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #333;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-cancel:hover {
            background: #333;
            border-color: #444;
        }

        .btn-delete {
            background: #2d1515;
            color: #ff6b6b;
            border: 1px solid #3d2525;
        }

        .btn-delete:hover {
            background: #3d2525;
            border-color: #ff6b6b;
        }

        .info-text {
            font-size: 13px;
            color: #666;
            margin-top: 5px;
        }

        .delete-section {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #2a2a2a;
        }

        .delete-warning {
            color: #888;
            font-size: 14px;
            margin-bottom: 15px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 20px;
                margin: 20px auto;
            }

            .form-container {
                padding: 25px 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column;
            }

            .header {
                padding: 15px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>üìä Trading Journal</h1>
        <a href="/journal" class="back-btn">‚Üê Back to Journal</a>
    </div>

    <!-- Main Container -->
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Edit Trade</h2>
            <p class="form-subtitle">Update your trade information</p>

            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <form action="/trades/edit/<%= trade.id %>" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                        <label for="pair">Trading Pair <span class="required">*</span></label>
                        <input 
                            type="text" 
                            id="pair" 
                            name="pair" 
                            placeholder="e.g., BTC/USD, EUR/USD"
                            value="<%= trade.pair %>"
                            required
                            autofocus
                        >
                    </div>

                    <div class="form-group">
                        <label for="position">Position <span class="required">*</span></label>
                        <select id="position" name="position" required>
                            <option value="">Select position</option>
                            <option value="LONG" <%= trade.position === 'LONG' ? 'selected' : '' %>>LONG (Buy)</option>
                            <option value="SHORT" <%= trade.position === 'SHORT' ? 'selected' : '' %>>SHORT (Sell)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="entry_price">Entry Price</label>
                        <input 
                            type="number" 
                            id="entry_price" 
                            name="entry_price" 
                            step="0.00001"
                            placeholder="0.00000"
                            value="<%= trade.entry_price || '' %>"
                        >
                        <div class="info-text">Price at which you entered the trade</div>
                    </div>

                    <div class="form-group">
                        <label for="exit_price">Exit Price</label>
                        <input 
                            type="number" 
                            id="exit_price" 
                            name="exit_price" 
                            step="0.00001"
                            placeholder="0.00000"
                            value="<%= trade.exit_price || '' %>"
                        >
                        <div class="info-text">Price at which you exited the trade</div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="profit_loss">Profit/Loss ($)</label>
                        <input 
                            type="number" 
                            id="profit_loss" 
                            name="profit_loss" 
                            step="0.01"
                            placeholder="0.00"
                            value="<%= trade.profit_loss || '' %>"
                        >
                        <div class="info-text">Use negative for losses (e.g., -150.50)</div>
                    </div>

                    <div class="form-group">
                        <label for="trade_date">Trade Date</label>
                        <input 
                            type="date" 
                            id="trade_date" 
                            name="trade_date"
                            value="<%= trade.trade_date %>"
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label for="comment">Comment / Notes</label>
                    <textarea 
                        id="comment" 
                        name="comment"
                        placeholder="Add any notes about this trade (strategy, market conditions, lessons learned, etc.)"
                    ><%= trade.comment || '' %></textarea>
                </div>

                <!-- Current Image Display -->
                <% if (trade.image_url) { %>
                <div class="form-group">
                    <label>Current Image</label>
                    <div class="current-image-container" style="position: relative; display: inline-block;">
                        <img src="<%= trade.image_url %>" alt="Trade screenshot" style="max-width: 100%; max-height: 300px; border-radius: 6px; border: 1px solid #333; display: block;">
                        <a href="<%= trade.image_url %>" target="_blank" style="display: inline-block; margin-top: 10px; color: #4a9eff; text-decoration: none; font-size: 13px;">
                            üîç View Full Size
                        </a>
                    </div>
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer; color: #ff6b6b; margin-top: 12px; font-weight: normal;">
                        <input type="checkbox" name="remove_image" value="true" id="removeImageCheckbox" onchange="toggleImageRemoval()" style="width: auto; cursor: pointer;">
                        Remove current image
                    </label>
                </div>
                <% } %>

                <!-- Upload New Image -->
                <div class="form-group" id="uploadSection">
                    <label for="image">
                        <%= trade.image_url ? 'Replace Image' : 'Add Screenshot / Chart Image' %>
                    </label>
                    <input 
                        type="file" 
                        id="image" 
                        name="image"
                        accept="image/*"
                        onchange="previewNewImage(event)"
                    >
                    <div class="info-text">Upload a screenshot or chart (max 5MB, .jpg, .png, .gif)</div>
                    
                    <!-- New Image Preview -->
                    <div id="newImagePreview" style="margin-top: 15px; display: none;">
                        <p style="color: #b0b0b0; font-size: 13px; margin-bottom: 8px;">New Image Preview:</p>
                        <img id="newPreview" src="" alt="New Preview" style="max-width: 100%; max-height: 300px; border-radius: 6px; border: 1px solid #4a9eff;">
                        <button type="button" onclick="removeNewPreview()" style="display: block; margin-top: 10px; padding: 6px 12px; background: #2d1515; color: #ff6b6b; border: 1px solid #3d2525; border-radius: 4px; cursor: pointer; font-size: 13px;">
                            Cancel Upload
                        </button>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/journal" class="btn btn-cancel">Cancel</a>
                    <button type="submit" class="btn btn-submit">Update Trade</button>
                </div>
            </form>

            <!-- Delete Section -->
            <div class="delete-section">
                <div class="delete-warning">
                    ‚ö†Ô∏è Danger Zone: This action cannot be undone.
                </div>
                <form action="/trades/delete/<%= trade.id %>" method="POST" style="max-width: 200px;">
                    <button 
                        type="submit" 
                        class="btn btn-delete" 
                        onclick="return confirm('Are you sure you want to permanently delete this trade?')"
                    >
                        Delete Trade
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Preview new image
        function previewNewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Check file size (5MB limit)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    event.target.value = '';
                    return;
                }

                // Check file type
                if (!file.type.startsWith('image/')) {
                    alert('Please select an image file');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('newPreview').src = e.target.result;
                    document.getElementById('newImagePreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        // Remove new image preview
        function removeNewPreview() {
            document.getElementById('image').value = '';
            document.getElementById('newImagePreview').style.display = 'none';
            document.getElementById('newPreview').src = '';
        }

        // Toggle image removal
        function toggleImageRemoval() {
            const checkbox = document.getElementById('removeImageCheckbox');
            const uploadSection = document.getElementById('uploadSection');
            
            if (checkbox && checkbox.checked) {
                // Disable upload when removing current image
                uploadSection.style.opacity = '0.5';
                uploadSection.style.pointerEvents = 'none';
            } else {
                uploadSection.style.opacity = '1';
                uploadSection.style.pointerEvents = 'auto';
            }
        }
    </script>
</body>
</html>