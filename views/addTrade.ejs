<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Trading Journal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0f0f0f;
            color: #e0e0e0;
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: #1a1a1a;
            border-bottom: 1px solid #2a2a2a;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            color: #fff;
            font-size: 24px;
            font-weight: 600;
        }

        .back-btn {
            background: #2a2a2a;
            color: #e0e0e0;
            padding: 8px 16px;
            border: 1px solid #333;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s;
        }

        .back-btn:hover {
            background: #333;
            border-color: #444;
        }

        /* Container */
        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 0 30px;
        }

        .form-container {
            background: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 10px;
            padding: 40px;
        }

        .form-title {
            color: #fff;
            font-size: 26px;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .form-subtitle {
            color: #888;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .error-message {
            background: #2d1515;
            color: #ff6b6b;
            padding: 12px 15px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            border-left: 3px solid #ff6b6b;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            color: #b0b0b0;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
        }

        label .required {
            color: #ff6b6b;
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        select,
        textarea {
            width: 100%;
            padding: 12px 15px;
            background: #252525;
            border: 1px solid #333;
            border-radius: 6px;
            font-size: 15px;
            color: #e0e0e0;
            transition: all 0.3s;
            font-family: inherit;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #4a9eff;
            background: #2a2a2a;
        }

        input::placeholder,
        textarea::placeholder {
            color: #666;
        }

        input[type="file"] {
            cursor: pointer;
            width: 100%;
            padding: 12px 15px;
            background: #252525;
            border: 2px dashed #333;
            border-radius: 6px;
            font-size: 14px;
            color: #e0e0e0;
            transition: all 0.3s;
        }

        input[type="file"]:hover {
            border-color: #4a9eff;
            background: #2a2a2a;
        }

        input[type="file"]::file-selector-button {
            background: #4a9eff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
            font-weight: 600;
        }

        input[type="file"]::file-selector-button:hover {
            background: #3a8eef;
        }

        select {
            cursor: pointer;
        }

        select option {
            background: #252525;
            color: #e0e0e0;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn {
            flex: 1;
            padding: 14px;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
        }

        .btn-submit {
            background: #4a9eff;
            color: white;
        }

        .btn-submit:hover {
            background: #3a8eef;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);
        }

        .btn-cancel {
            background: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #333;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-cancel:hover {
            background: #333;
            border-color: #444;
        }

        .info-text {
            font-size: 13px;
            color: #666;
            margin-top: 5px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 20px;
                margin: 20px auto;
            }

            .form-container {
                padding: 25px 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column;
            }

            .header {
                padding: 15px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1>üìä Trading Journal</h1>
        <a href="/journal" class="back-btn">‚Üê Back to Journal</a>
    </div>

    <!-- Main Container -->
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Add New Trade</h2>
            <p class="form-subtitle">Record your trading activity and track performance</p>

            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <form action="/trades/add" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                        <label for="pair">Trading Pair <span class="required">*</span></label>
                        <input 
                            type="text" 
                            id="pair" 
                            name="pair" 
                            placeholder="e.g., BTC/USD, EUR/USD"
                            required
                            autofocus
                        >
                    </div>

                    <div class="form-group">
                        <label for="position">Position <span class="required">*</span></label>
                        <select id="position" name="position" required>
                            <option value="">Select position</option>
                            <option value="LONG">LONG (Buy)</option>
                            <option value="SHORT">SHORT (Sell)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="entry_price">Entry Price</label>
                        <input 
                            type="number" 
                            id="entry_price" 
                            name="entry_price" 
                            step="0.00001"
                            placeholder="0.00000"
                        >
                        <div class="info-text">Price at which you entered the trade</div>
                    </div>

                    <div class="form-group">
                        <label for="exit_price">Exit Price</label>
                        <input 
                            type="number" 
                            id="exit_price" 
                            name="exit_price" 
                            step="0.00001"
                            placeholder="0.00000"
                        >
                        <div class="info-text">Price at which you exited the trade</div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="profit_loss">Profit/Loss ($)</label>
                        <input 
                            type="number" 
                            id="profit_loss" 
                            name="profit_loss" 
                            step="0.01"
                            placeholder="0.00"
                        >
                        <div class="info-text">Use negative for losses (e.g., -150.50)</div>
                    </div>

                    <div class="form-group">
                        <label for="trade_date">Trade Date</label>
                        <input 
                            type="date" 
                            id="trade_date" 
                            name="trade_date"
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label for="comment">Comment / Notes</label>
                    <textarea 
                        id="comment" 
                        name="comment"
                        placeholder="Add any notes about this trade (strategy, market conditions, lessons learned, etc.)"
                    ></textarea>
                </div>

                <div class="form-group">
                    <label for="image">Screenshot / Chart Image</label>
                    <input 
                        type="file" 
                        id="image" 
                        name="image"
                        accept="image/*"
                        onchange="previewImage(event)"
                    >
                    <div class="info-text">Upload a screenshot or chart (max 5MB, .jpg, .png, .gif)</div>
                    
                    <!-- Image Preview -->
                    <div id="imagePreview" style="margin-top: 15px; display: none;">
                        <p style="color: #b0b0b0; font-size: 13px; margin-bottom: 8px;">Preview:</p>
                        <img id="preview" src="" alt="Preview" style="max-width: 100%; max-height: 300px; border-radius: 6px; border: 1px solid #333;">
                        <button type="button" onclick="removePreview()" style="display: block; margin-top: 10px; padding: 6px 12px; background: #2d1515; color: #ff6b6b; border: 1px solid #3d2525; border-radius: 4px; cursor: pointer; font-size: 13px;">
                            Remove Image
                        </button>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/journal" class="btn btn-cancel">Cancel</a>
                    <button type="submit" class="btn btn-submit">Add Trade</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Set default date to today
        document.getElementById('trade_date').valueAsDate = new Date();

        // Image preview function
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                // Check file size (5MB limit)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    event.target.value = '';
                    return;
                }

                // Check file type
                if (!file.type.startsWith('image/')) {
                    alert('Please select an image file');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        // Remove preview
        function removePreview() {
            document.getElementById('image').value = '';
            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('preview').src = '';
        }
    </script>
</body>
</html>